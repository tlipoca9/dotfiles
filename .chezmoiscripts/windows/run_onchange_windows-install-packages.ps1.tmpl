function IsScoopInstalled {
  
  param (
    [string]$bucket,
    [string]$app
  )

  scoop list $app 6>$null | ForEach-Object {
    if ($_.Source -eq $bucket -and $_.Name -eq $app) {
      return "true"
    }
  }

  return "false"
}



# Configure scoop proxy if 127.0.0.1:10809 is listening
try {
  $tcp = New-Object System.Net.Sockets.TcpClient
  $tcp.Connect("127.0.0.1", 10809)
  $tcp.Close()
  scoop config proxy 127.0.0.1:10809
  INFO "Scoop proxy set to 127.0.0.1:10809"
} catch {
  scoop config rm proxy *>$null
  INFO "Proxy port 10809 not listening, scoop proxy cleared."
}

